<!-- Modal Solicitar -->
<div id="modalSolicitar" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Solicitar</h4>
            </div>
            <div class="modal-body">
                <div class="col-sm-12">
                    <div class="featured-box featured-box-primary align-left mt-xlg" style="height: 491px;">
                        <div class="box-content">
                            <form id="frmSignUp">
                                <div class="row">
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label>Nombre</label>
                                            <input id="txtNombreRegistro" maxlength="25" type="text" value="" class="form-control input-lg" required="">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label>Direccion de E-mail</label>
                                            <input id="txtEmailRegistra" maxlength="25" type="email" value="" class="form-control input-lg" required="">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label>Tipo de Cuenta</label>
                                            <select id="ddlTipoCuenta" class="form-control" name="TipoCuenta">
                                                <option value="">--Seleccionar--</option>
                                                <option value="C">Cliente</option>
                                                <option value="U">Usuario</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        <div class="col-md-6">
                                            <label>Password</label>
                                            <input id="txtPasswordRegistro" maxlength="25" type="password" value="" class="form-control input-lg" required="">
                                        </div>
                                        <div class="col-md-6">
                                            <label>Confirmar Password</label>
                                            <input id="txtPasswordConfirmaRegistro" maxlength="25" type="password" value="" class="form-control input-lg" required="">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <input id="btnSolicitar" value="ENVIAR" class="btn btn-primary pull-right mb-xl">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
            </div>
        </div>

    </div>
</div>

<script src="https://www.promisejs.org/polyfills/promise-7.0.4.min.js"></script>
<script src="https://code.jquery.com/jquery-2.2.4.min.js"></script>


<script>
    var routes = {
        getLast: '@Url.Action("getAllPickUps", "PickUp")'
    };
</script>


<script>

    var jq = $(document);

    var myMap = function () { };

    myMap.prototype.initMap = function () {

        if (navigator.geolocation) {

            $.post(routes.getLast, {}, function (response) {

                var lstLickups = [];
                // Init the data
                try {
                    lstLickups = JSON.parse(response);
                } catch (err) { alert('error'); }

                var map = new google.maps.Map(document.getElementById('map'), {
                    center: new google.maps.LatLng(9.901141, -83.995116),
                    scrollwheel: true,
                    zoom: 15,
                    mapTypeId: google.maps.MapTypeId.ROADMAP
                });

                //set multiple markers in the map
                var marker, i;

                lstLickups.forEach(function (item, index) {

                    marker = new google.maps.Marker({
                        position: new google.maps.LatLng(item.Lat, item.Long),
                        map: map,
                        icon: 'https://developers.google.com/maps/documentation/javascript/examples/full/images/beachflag.png'
                    });

                });

                google.maps.event.addListener(marker, 'click', (function (marker, i) {
                    return function () {
                        infowindow.setContent(locations[i][0]);
                        infowindow.open(map, marker);
                    }
                })(marker, i));



            });

        }
        else { alert('Actualiza tu navegador para accesar a todos las caracteristicas de la pagina'); }
    };

    var Controller = new myMap();

    jq.on('click', '#btnSolicitar', function () {

        alert('ITS IN');

    });

</script>

<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA5igjNW3qEU-FZ62YOO4S2dwQu6Xn-lv8&callback=Controller.initMap"></script>




