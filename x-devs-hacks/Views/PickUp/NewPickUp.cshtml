            </div>
        </div>
    </div>
</section>
<div>
    <div class="col-md-12">
        <input  value="REPORTAR" class="btn btn-primary pull-right mb-xl">
        <input  value="SOLICITAR RECOLECCION" class="btn btn-primary pull-right mb-xl" data-toggle="modal" data-target="#modalSolicitar">
